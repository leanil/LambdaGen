{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-no-lambda": {
      "severity": "off"
    },
    "no-console": {
      "severity": "warning"
    },
    "ordered-imports": {
      "severity": "warning"
    },
    "comment-format": {
      "severity": "warning"
    },
    "no-var-keyword": {
      "severity": "warning"
    },
    "prefer-const": {
      "severity": "warning"
    }
  }
}
