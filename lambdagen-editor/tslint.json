{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "defaultSeverity": "warning",
  "rules": {
    "jsx-no-lambda": { "severity": "off" },
    "max-classes-per-file": { "severity": "off" }
  }
}
